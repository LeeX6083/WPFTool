<mah:MetroWindow 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Log Viewer Tool" Height="600" Width="800">

    <Grid>
        <!-- 侧边导航栏 -->
        <materialDesign:DrawerHost>
            <materialDesign:DrawerHost.LeftDrawerContent>
                <StackPanel Background="{DynamicResource MaterialDesignPaper}">
                    <!-- 导航栏标题 -->
                    <TextBlock Text="工具导航"
                               FontSize="18"
                               Margin="16,16,16,8"
                               Foreground="{DynamicResource MaterialDesignBody}"/>

                    <!-- 导航项 -->
                    <ListBox x:Name="NavigationListBox"
                             SelectionMode="Single"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource MaterialDesignNavigationRailListBoxItem}"
                             SelectedIndex="0">
                        <ListBoxItem Content="日志查看">
                            <ListBoxItem.Icon>
                                <materialDesign:PackIcon Kind="FormatListText" />
                            </ListBoxItem.Icon>
                        </ListBoxItem>
                        <ListBoxItem Content="系统监控">
                            <ListBoxItem.Icon>
                                <materialDesign:PackIcon Kind="MonitorDashboard" />
                            </ListBoxItem.Icon>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <!-- 主内容区 -->
            <Frame x:Name="MainContentFrame" 
                   NavigationUIVisibility="Hidden"
                   materialDesign:TransitionAssist.DisableTransitions="False"/>
        </materialDesign:DrawerHost>
    </Grid>
</mah:MetroWindow>